{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "moduleResolution": "nodenext",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/storage/services/*"],
      "@navigation/*": ["src/navigation/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@storage/*": ["src/storage/*"],
      "@type/*": ["src/types/*"]
    }
  },
  "types": ["bun-types"]
}
