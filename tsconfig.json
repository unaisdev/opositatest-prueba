{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    // ... other configs, if any
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/storage/services/*"],
      "@navigation/*": ["src/navigation/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@storage/*": ["src/storage/*"],
      "@type/*": ["src/types/"]
    }
  }
}
